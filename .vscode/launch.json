{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Server (Mono)",
      "type": "mono",
      "request": "launch",
      "preLaunchTask": "package (Debug)",
      "program": "${env:VINTAGE_STORY_SERVER}/VintagestoryServer.exe",
      "args": [
        "--dataPath",
        "${env:VINTAGE_STORY_SERVER_DATA_MODDING}",
        "--addModPath",
        "${workspaceFolder}/bin/packages/mods"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Launch Client (Mono)",
      "type": "mono",
      "request": "launch",
      "preLaunchTask": "package (Debug)",
      "program": "${env:VINTAGE_STORY}/Vintagestory.exe",
      "args": [
        "-p",
        "-o",
        "modding test world",
        "--dataPath",
        "${env:VINTAGE_STORY_SERVER_DATA_MODDING}",
        "--addModPath",
        "${workspaceFolder}/bin/packages/mods"
      ]
    },
    {
      "name": "Launch Client no world (Mono)",
      "type": "mono",
      "request": "launch",
      "preLaunchTask": "package (Debug)",
      "program": "${env:VINTAGE_STORY}/Vintagestory.exe",
      "args": [
        "--dataPath",
        "${env:VINTAGE_STORY_SERVER_DATA_MODDING}",
        "--addModPath",
        "${workspaceFolder}/bin/packages/mods"
      ]
    },
    {
      "name": "Launch Client no world no build (Mono)",
      "type": "mono",
      "request": "launch",
      "program": "${env:VINTAGE_STORY}/Vintagestory.exe",
      "args": [
        "--dataPath",
        "${env:VINTAGE_STORY_SERVER_DATA_MODDING}",
        "--addModPath",
        "${workspaceFolder}/bin/packages/mods"
      ]
    }
  ]
}
